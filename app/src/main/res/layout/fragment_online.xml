<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".online.OnlineFragment">

    <!-- TODO: Update blank fragment layout -->

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout_online"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/boxes_scrollview_online"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/frame_search_bar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:focusableInTouchMode="true">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="380dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp">

                    <Button
                        android:id="@+id/button_online_normal_mode"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_game_selection_1"
                        android:elevation="10dp"
                        android:foreground="?selectableItemBackground"
                        android:shadowRadius="5"
                        android:text="@string/text_normal_mode_online"
                        android:textColor="@color/colorWhite"
                        android:elegantTextHeight="true"
                        android:textSize="36sp"/>

                </android.support.constraint.ConstraintLayout>


                <Button
                    android:id="@+id/button_online_team_mode"
                    android:layout_width="match_parent"
                    android:layout_height="380dp"
                    android:layout_margin="16dp"
                    android:background="@drawable/box_game_selection"
                    android:foreground="?selectableItemBackground"
                    android:shadowRadius="5"
                    android:text="@string/text_team_mode_online"
                    android:textColor="@android:color/white"
                    android:textSize="36sp"/>

            </LinearLayout>
        </ScrollView>

        <FrameLayout
            android:id="@+id/frame_search_bar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:focusableInTouchMode="true">

            <EditText
                android:id="@+id/edittext_searchbox_online"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/searchbox_online"
                android:ems="10"
                android:hint="@string/text_hint_input_online"
                android:imeOptions="actionDone"
                android:inputType="textPersonName"
                android:singleLine="true"
                android:textAlignment="center"
                android:textColor="@color/colorWhite"
                android:textColorHint="@drawable/selector_hint_online_search"
                android:textSize="14sp"/>
        </FrameLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/room_list_recyclerview_online"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/colorWhite"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/frame_search_bar"/>

    </android.support.constraint.ConstraintLayout>
</FrameLayout>