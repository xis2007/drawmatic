<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_item_room"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="8dp"
    android:paddingTop="8dp"
    android:paddingEnd="8dp">

    <ImageView
        android:id="@+id/image_item_background_no_result"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/box_rooms_searched"/>

    <TextView
        android:id="@+id/text_room_name_no_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="No Results"
        android:textColor="@color/colorWhite"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/image_item_background_no_result"
        app:layout_constraintStart_toStartOf="@+id/image_item_background_no_result"
        app:layout_constraintTop_toBottomOf="@+id/image_error_no_result"/>

    <ImageView
        android:id="@+id/image_error_no_result_background"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:tint="@color/colorWhite"
        app:layout_constraintEnd_toEndOf="@+id/image_item_background_no_result"
        app:layout_constraintStart_toStartOf="@+id/image_item_background_no_result"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/oval_blank_navigation_button"/>

    <ImageView
        android:id="@+id/image_error_no_result"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:tint="@color/colorAlertRed"
        app:layout_constraintEnd_toEndOf="@+id/image_item_background_no_result"
        app:layout_constraintStart_toStartOf="@+id/image_item_background_no_result"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_error"/>

</android.support.constraint.ConstraintLayout>